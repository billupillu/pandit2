<%= render "partials/side" %>
<div class="formHolder">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false,label: false,placeholder: "Email or Username (eg: test@example.com)", autofocus: true %>
    <%= f.input :password, label: false,placeholder: "Enter Password",required: false %>
    <div style="color:#DACA7E;"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in",class: "submit-login" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
<%= render "partials/foot" %>
